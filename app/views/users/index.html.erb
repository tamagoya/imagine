<h1><%= t("activerecord.models.user") %></h1>

<table class="table">
  <tr>
    <th><%= t("activerecord.attributes.user.name") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to t("action.show"), user, :class => "btn" %></td>
    <td><%= link_to t("action.edit"), edit_user_path(user), :class => "btn"  %></td>
    <td><%= link_to t("action.destroy"), user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %></td>
  </tr>
<% end %>
</table>

