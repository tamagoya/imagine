<%= render 'sidebar' %>

<h1><%= t("activerecord.models.wish") + " " + t("action.list")%></h1>

<% @wish_rows.each do |wish_row| %>
<div class="row">
  <div class="span9">
    <ul class="thumbnails">
      <% wish_row.each do |wish| %>
      <% if wish.nil? then %>
        <li class="span3">
        </li>
      <% else %>
        <li class="span3">
        <div class="thumbnail">
          <%= if wish.url.blank? then
                image_tag wish.wish_image.url(:original)
              else
                link_to(image_tag(wish.wish_image.url(:original)), wish.url, :class => "thumbnail")
              end %>
          <div class="caption">
            <h5><%= wish.title %></h5>
            <p><%= wish.description %></p>
            <p>
              <%= link_to(t("action.attend"), "#", :class => "btn btn-primary") %>
              <%= link_to(t("action.like"), "#", :class => "btn btn") %>
            </p>
          </div>
        </div>
        </li>
      <% end  %>
      <% end %>
    </ul>
  </div>
</div>
<% end %>


